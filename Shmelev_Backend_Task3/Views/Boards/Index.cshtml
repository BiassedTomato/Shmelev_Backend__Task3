@model IndexViewModel


<div>
    <table style="border:1px solid black;">

        @if (Context.User.IsInRole("Admin"))
        {
            <a asp-action="Create" asp-controller="Boards" class="btn Button btn-info">New board</a>
        }

        @for (int i = 0; i < Model.Boards.Count; i++)
        {
            var board = Model.Boards[i];

            <tr>
                <td style="border:1px solid black;">
                    <a asp-action="DisplayBoard" asp-controller="Boards" asp-route-boardId="@(board.Id)">/@board.Name/</a>
                    @if (Context.User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-boardId=@board.Id asp-controller="Boards" class="btn Button btn-info">Edit</a> <a asp-action="Delete" asp-controller="Boards" asp-route-boardId=@board.Id class="btn Button btn-danger">X</a>
                    }
                </td>
            </tr>

        }

    </table>
</div>
